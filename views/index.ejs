<% 

var libs = [
  "lib/jquery/dist/jquery.min.js",
  "lib/bootstrap/dist/js/bootstrap.min.js",
  "lib/angular/angular.min.js",
  "lib/chart.js/dist/Chart.min.js",
  "lib/socket.io-client/socket.io.js",
  "lib/angular-socket-io/socket.min.js",
  "lib/angular-chart.js/dist/angular-chart.min.js",
  "lib/angular-route/angular-route.min.js",
  "lib/angular-cookies/angular-cookies.min.js"
];

if (domain) {
  libs = libs.map(function(val) {
    return '//' + domain  + '/' + val;
  });
}
%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vote Application</title>
  <link rel="stylesheet" href="<%='//' + domain + '/'%>lib/bootstrap/dist/css/bootstrap.min.css">
  <% libs.forEach(function(val) { %>
  <script src="<%=val%>"></script>
  <% }) %>
  <base href="/">
</head>
<body data-ng-app="vote-app" data-ng-controller="AuthenticationController">
  <navigation></navigation>
  <cookies-warning>This site is using cookies, in order to provide best experience. You can learn more <a target="_blank" href="https://en.wikipedia.org/wiki/HTTP_cookie">here</a></cookies-warning>
  <messages></messages>
  <data-ng-view></data-ng-view>
  <% include footer.server.view.ejs %>
  <script src="<%='//' + domain + '/'%>vote-app.min.js"></script>
</body>
</html>